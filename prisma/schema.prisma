generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id              Int      @id @default(autoincrement())
  titulo          String
  descripcion     String? 
  imagen          String[]
  banos           Int
  precio          Int      @default(0)
  numeroContacto  Int      @default(0)
  habitaciones    Int
  garajes         Int
  amueblado       Boolean
  ciudad          String
  metrosCuadrados Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  properties Property[]
}
